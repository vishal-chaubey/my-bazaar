<div class= "container">
	<% for(var i = 0; i < products.length;){ %>
		<div class="row">
			<% for(var j = 0; j < 3; j++){ %> 
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail">
							<img src="<%= products[i].imagePath %>" alt="first" class="img-responsive">
							<div class="caption">
								<h3><%= products[i].title %></h3>
								<p class = "description"><%= products[i].description %></p>

								<div class = "clearfix"> 
									<div class= "price pull-left"> $<%= products[i].price %></div>
									<a href="/add-to-cart/<%= products[i]._id %>" class="btn btn-success pull-right" role="button">Add to Shopping-Cart</a>
									<% i += 1 %>
								</div>
							</div>
					</div> 		
				</div>
			<% }; %>
		</div>
	<% }; %>
</div>